<h1>Listing name_tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @name_tags.each do |name_tag| %>
      <tr>
        <td><%= name_tag.name %></td>
        <td><%= link_to 'Show', name_tag %></td>
        <td><%= link_to 'Edit', edit_name_tag_path(name_tag) %></td>
        <td><%= link_to 'Destroy', name_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Name tag', new_name_tag_path %>
