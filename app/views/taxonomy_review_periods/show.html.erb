<div class="focus-details <%= 'freshly-created' if Time.now.strftime("%Y%m%d") == @taxonomy_review_period.created_at.strftime("%Y%m%d") &&
                          (@taxonomy_review_period.created_at - @taxonomy_review_period.updated_at).abs < 10 %>">
  <% if notice %> <p id="notice"><%= notice %></p> <% end %>

  <br>

  Taxonomy Review Period starting <%= link_to(@taxonomy_review_period.start_date.strftime("%d-%b-%Y"), search_path(query_target: 'taxonomy_review_period',
                                                 query_string: "id:#{@taxonomy_review_period.id}"),
                                                 id: 'tab-heading',
                                                 title: 'Query this taxonomy_review_period') %>

  <div>&nbsp;</div>

  <%= render partial: 'taxonomy_review_periods/tabs/tabs' %>

  <%= render partial: "taxonomy_review_periods/tabs/#{@tab}" %>

  <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

</div><!-- /end .focus-details -->
