

<%= form_tag(search_path, method: :get, id: "search-form", class: 'form-inline')  do -%>

<div class="row">
  <div class="col-xs-11 col-sm-12 col-md-10 col-lg-9">

    <div class="debug input-group width-80-percent">

      <%#= render partial: 'search_target' %>
        <div id="search-target-btn" class="input-group-btn">
        <button id="search-target-button" 
                type="button" 
                class="btn btn-default dropdown-toggle" 
                tabindex="7"
                title="Target of the search"
                data-toggle="dropdown" 
                aria-haspopup="true" 
                aria-expanded="false">
          <span id="search-target-button-text">

            Namesxx

          </span>
          &nbsp;
        <span class="caret"></span></button>

        <ul id="search-target-list" class="dropdown-menu">
          <li><a id="search-target-item-names" 
                 href="#" 
                 title="Set the search to target names" 
                 data-help="name-search-help" 
                 data-examples="name-search-examples"
                 data-advanced="name-search-advanced" 
              >Names</a></li>
          <li><a id="search-target-item-name-with-instances" 
                 href="#" 
                 title="Set the search to target names and also retrieve instances" 
                 data-help="name-plus-instances-search-help" 
                 data-examples="name-plus-instances-search-examples"
                 data-advanced="name-plus-instances-search-advanced" 
              >Names plus instances</a>
          </li>
            <li><a id="search-target-item-orchid-names" 
                   href="#" 
                   title="Set the search to target orchid names" 
                   data-help="orchids-search-help" 
                   data-examples="orchids-search-examples"
                   data-advanced="orchids-search-advanced" 
                >Orchids</a>
            </li>

        </ul>
      </div><!-- /btn-group -->

      <input id="query-string-field" 
             name="query_string" 
             type="search" 
             class="form-control"
             aria-label="search field"
             tabindex = "8"
             placeholder = "Search terms"
             autofocus = "<%= @autofocus_search %>"
             title = "Specify your search"
             value = "<%= @search.parsed_request.query_string if @search.present? %>"
             required
             >
    </div><!-- /input-group -->
    <input id="query-submit" name="query_submit" value="Search" type="submit" class="pull-right btn search-btn" tabindex="9" title="Run the query">
    <input id="focus-id" name="focus-id" value="<%= @focus_id %>" type="hidden" class="" title="focus id">
  </div><!-- /.col-lg-9 -->
</div><!-- /row -->

  <input id="query-target" name="query_target" value="<%= @search.parsed_request.target_button_text %>" type="hidden" >

<% end %>

