      <div id="search-target-btn" class="input-group-btn">
        <button id="search-target-button" 
                type="button" 
                class="btn btn-default dropdown-toggle" 
                tabindex="7"
                title="Target of the search"
                data-toggle="dropdown" 
                aria-haspopup="true" 
                aria-expanded="false">
          <span id="search-target-button-text">

            <%= @search.parsed_request.target_button_text || 'no target button text' %>

          </span>
          &nbsp;
        <span class="caret"></span></button>

        <ul id="search-target-list" class="dropdown-menu">
          <li><a id="search-target-item-names" 
                 href="#" 
                 title="Set the search to target names" 
                 data-help="name-search-help" 
                 data-examples="name-search-examples"
                 data-advanced="name-search-advanced" 
              >Names</a></li>
          <li><a id="search-target-item-name-with-instances" 
                 href="#" 
                 title="Set the search to target names and also retrieve instances" 
                 data-help="name-plus-instances-search-help" 
                 data-examples="name-plus-instances-search-examples"
                 data-advanced="name-plus-instances-search-advanced" 
              >Names plus instances</a>
          </li>
          <% if Rails.configuration.try(:look_for_orchids_table) %>
            <li><a id="search-target-item-orchid-names" 
                   href="#" 
                   title="Set the search to target orchid names" 
                   data-help="orchids-search-help" 
                   data-examples="orchids-search-examples"
                   data-advanced="orchids-search-advanced" 
                >Orchids</a>
            </li>
          <% end %>

          <li role="separator" class="divider"></li>

          <li><a id="search-target-item-authors" 
                     href="#" 
                 title="Set the search to target authors" 
                     data-help="author-search-help" 
                     data-examples="author-search-examples" 
                     data-advanced="author-search-advanced" 
                  >Authors</a></li>
          <li role="separator" class="divider"></li>

          <li><a id="search-target-item-references" 
                 href="#" 
                 title="Set the search to target references" 
                 data-help="reference-search-help"
                 data-examples="reference-search-examples"
                 data-advanced="reference-search-advanced"
                 >References</a></li>

          <li><a id="search-target-item-reference-accepted-names" 
                 href="#" 
                 title="Set the search to target references with novelties." 
                 data-help="references-accepted-names-search-help"
                 data-examples="references-accepted-names-search-examples"
                 data-advanced="references-with-novelties-search-advanced"
              >References with novelties</a></li>
          <li><a id="search-target-item-instances-for-reference" 
                 href="#" 
                 title="Set the search to target references and return full synonymy" 
                 data-help="references-names-full-synonymy-search-help"
                 data-examples="references-names-full-synonymy-search-examples"
                 data-advanced="references-names-full-synonymy-search-advanced"
              >References, names, full synonymy</a></li>
          <li><a id="search-target-item-reference-shared-names" 
                 href="#" 
                 title="Query the instances for 2 references - show only the instances for shared names." 
                 data-help="references-shared-names-search-help"
                 data-examples="references-shared-names-search-examples"
                 data-advanced="references-shared-names-search-advanced"
              >References shared names</a></li>
          <li role="separator" class="divider"></li>
          <li><a id="search-target-item-instances" 
                     href="#" 
                 title="Set the search to target instances" 
                     data-help="instance-search-help"
                     data-examples="instance-search-examples"
                     data-advanced="instance-search-advanced"
                  >Instances</a></li>
          <li role="separator" class="divider"></li>
          <li><a id="search-target-audit" 
                     href="#" 
                 title="Set the search to target review" 
                     data-help="review-search-help"
                     data-examples="review-search-examples"
                     data-advanced="review-search-advanced"
                     >Review</a></li> 
          <% if Rails.configuration.try(:enable_tree_search) %>
            <li role="separator" class="divider"></li>
            <li><a id="search-target-item-trees" 
                   href="#" 
                   title="Set the search to target trees" 
                   data-help="tree-search-help" 
                   data-examples="tree-search-examples"
                   data-advanced="tree-search-advanced" 
                >Trees</a>
            </li>
            <li><a id="search-target-item-tree-versions" 
                   href="#" 
                   title="Set the search to target tree versions"
                   data-help="tree-version-search-help" 
                   data-examples="tree-version-search-examples"
                   data-advanced="tree-version-search-advanced" 
                >Tree Versions</a>
            </li>
            <li><a id="search-target-item-tree-version-elements" 
                   href="#" 
                   title="Set the search to target tree version elements" 
                   data-help="tree-version-element-search-help" 
                   data-examples="tree-version-element-search-examples"
                   data-advanced="tree-version-element-search-advanced" 
                >Tree Version Elements</a>
            </li>
            <li><a id="search-target-item-tree-elements" 
                   href="#" 
                   title="Set the search to target tree elements" 
                   data-help="tree-element-search-help" 
                   data-examples="tree-element-search-examples"
                   data-advanced="tree-element-search-advanced" 
                >Tree Elements</a>
            </li>
          <% end %>
        </ul>
      </div><!-- /btn-group -->
