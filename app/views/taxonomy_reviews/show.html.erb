<div class="focus-details <%= 'freshly-created' if Time.now.strftime("%Y%m%d") == @taxonomy_review.created_at.strftime("%Y%m%d") &&
                          (@taxonomy_review.created_at - @taxonomy_review.updated_at).abs < 10 %>">
  <% if notice %> <p id="notice"><%= notice %></p> <% end %>

  <br>

  <%= link_to(@taxonomy_review.name, search_path(query_target: 'taxonomy_review',
                                                 query_string: "id:#{@taxonomy_review.id}"),
                                                 id: 'tab-heading',
                                                 title: 'Query this taxonomy_review') %>

  <div>&nbsp;</div>

  <%= render partial: 'taxonomy_reviews/tabs/tabs' %>

  <%= render partial: "taxonomy_reviews/tabs/#{@tab}" %>

  <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

</div><!-- /end .focus-details -->
