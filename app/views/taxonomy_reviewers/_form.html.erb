<%= form_for(@taxonomy_reviewer, as: 'taxonomy_reviewer', role: 'form', remote: true
    ) do |f| %>
    <% if @taxonomy_reviewer.errors.any? %>
        <div id="error_explanation">
          <h6><%= pluralize(@taxonomy_reviewer.errors.count, "error") %> prohibited this taxonomy_reviewer from being saved:</h6>

          <ul>
            <% @taxonomy_reviewer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div id="search-result-details-info-message-container" class="message-container"></div>
    <div id="search-result-details-error-message-container" class="message-container"></div>
    <input type="hidden" name="random_id" value="<%= params[:random_id] %>"/>

    <div class="form-group">
      <label for="username">UserName</label>
      <%= f.text_field :username, class: 'form-control give-me-focus', title: "Enter username", tabindex: increment_tab_index, autofocus: true %>
        <p class="help-block">Users login ID or username for this system e.g. gclarke</p>
    </div>

    <div class="form-group">
      <label for="organisation_name">organisation</label>
      <%= f.text_field :organisation_name, class: 'form-control', title: 'Enter reviewer organisation', tabindex: increment_tab_index %>
    </div>

    <div class="form-group">
      <label for="role_name">role</label>
      <%= f.text_field :role_name, class: 'form-control', title: 'Enter reviewer role', tabindex: increment_tab_index %>
    </div>

    <div class="form-group align-right">
      <% if @taxonomy_reviewer.id.blank? %>
          <%= link_to 'Cancel', '/cancel-new-form', class: "btn btn-primary cancel-new-record-link", title: "Cancel new reviewer", tabindex: increment_tab_index, data: {element_id: "new-taxonomy-reviewer-#{params[:random_id]}"} %>
      <% end %>
      <%= f.submit "Save", id: 'taxonomy-reviewer-save', class: 'btn btn-primary width-5em', title: "Save changes", tabindex: increment_tab_index, disabled: false %>
    </div>

<% end %>

<% if @take_focus %>
  <script>
    $(document).ready(function () {
      document.getElementById('author_name').focus();
    })
  </script>
<% end %>
