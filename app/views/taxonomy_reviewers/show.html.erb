<div class="focus-details 
            <%= 'freshly-created' if Time.now.strftime("%Y%m%d") == @taxonomy_reviewer.created_at.strftime("%Y%m%d") &&  (@taxonomy_reviewer.created_at - @taxonomy_reviewer.updated_at).abs < 10 %>">
  <% tab_tab_index = @tab_index %>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="inner">
    <h3>
      <%= link_to("Taxonomy reviewer: #{@taxonomy_reviewer.username}", 
                  search_path(query_target: 'taxonomy_reviewer', 
                              query_string: "id:#{@taxonomy_reviewer.id}"),
                  id: 'tab-heading',
                  title: "Query this taxonomy reviewer record") %>
    </h3>
    <%= render partial: 'tabs' %>
    <%= render partial: "taxonomy_reviewers/tabs/#{@tab}" %>
    <br>
    <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

  </div><!-- /end .inner -->
</div><!-- /end .focus-details -->
