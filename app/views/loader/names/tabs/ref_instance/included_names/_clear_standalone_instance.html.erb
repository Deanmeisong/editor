  <% if match.standalone_instance_id.blank? %>
    <%= form_with(url: loader_name_match_clear_taxonomy_nomination_path(match.id),
                  role: 'form', remote: true, method: :patch) do |f| -%>
      <%= f.submit "Clear the choice",
                    id: 'clear-choice-button',
                    tabindex: increment_tab_index,
                    title: 'Clear the choice for how to set up the instance',
                    class: "btn btn-primary width-10em pull-right" -%>
  <% end -%>
  <br> <br>
  <% else %>
    <br>Standalone instance has been nominated or created.  You cannot clear the choice.
    <%= form_with(url: loader_name_match_clear_standalone_instance_path(match.id),
                  role: 'form', remote: true, method: :patch) do |f| -%>
      <%= f.submit "Clear standalone instance",
                    id: 'clear-standalone-instance-button',
                    tabindex: increment_tab_index,
                    title: 'Clear the standalone instance',
                    class: "btn btn-primary width-14em pull-right" -%>
    <% end -%>
    <br>
    <br>
    <%= form_with(url: loader_name_match_clear_and_delete_standalone_instance_path(match.id),
                  role: 'form', remote: true, method: :patch) do |f| -%>
      <%= f.submit "Clear standalone instance and delete the instance",
                    id: 'clear-and-delete-standalone-instance-button',
                    tabindex: increment_tab_index,
                    title: 'Clear the standalone instance and delete the instance',
                    class: "btn btn-primary width-24em pull-right" -%>
    <% end -%>
<% end %>
