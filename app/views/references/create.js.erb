$('.message-container').html('');
<% if params[:random_id].present? %>
  $('tr#new-reference-<%= params[:random_id] %>').replaceWith("<%= escape_javascript(h(render partial: 'reference_record', locals: {reference: @reference, give_me_focus: true})) %>");
  $('tr#search-result-<%= @reference.id %> td.takes-focus a.show-details-link').focus();
<% else %>
    if($('#search-result-details-info-message-container').text().indexOf('Copied') == -1) {
      $('#search-result-details-info-message-container').html('Copied');
    } else {
      $('#search-result-details-info-message-container').append('.'); }
<% end %>


